@model weather_app.Models.Dtos.LoginDto
@{
  Layout = "_AccountLayout";
}
<form class="form-signin" asp-action="Login" autocomplete="off">
  <img class="mb-4" src="https://i.pinimg.com/originals/77/0b/80/770b805d5c99c7931366c2e84e88f251.png" alt="" width="72"
    height="72">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  @if (Model.ErrorMessage != null)
  {
    <div class="alert alert-danger" role="alert">
      @Model.ErrorMessage
    </div>
  }
  <label for="inputEmail" class="sr-only">Email or Username</label>
  <input type="text" asp-for="Email" id="inputEmail" class="form-control" placeholder="Email or Username" required
    autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required>
  <div class="checkbox mb-3">
    <label>
      <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Don't Have an Account?</a>
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>